{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/pytest",
      "args": ["-v", "--no-cov", "${file}"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/pytest",
      "args": ["-v", "--no-cov", "tests/"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Test Module",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/pytest",
      "args": ["-v", "--no-cov", "${fileDirname}"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}